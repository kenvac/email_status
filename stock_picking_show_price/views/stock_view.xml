<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_move_picking_price_tree" model="ir.ui.view">
            <field name="name">stock.move.tree.price</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_qty']" position="after">
                    <field name="price_unit"
                           groups="stock_picking_show_price.group_picking_price"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_picking_price_form" model="ir.ui.view">
            <field name="name">Invoice Cancel Admin</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="price_unit"
                           groups="stock_picking_show_price.group_picking_price"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
