<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Adds scrap reason to form view -->
        <record id="view_stock_scrap_form_partner" model="ir.ui.view">
            <field name="name">stock.scrap.view.partner</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock_scrap_reason.view_stock_scrap_form"/>
            <field name="arch" type="xml">
                <field name="reason_id" position="after">
                    <field name="is_partner_required" invisible="True"/>
                    <field name="partner_id"
                           context="{'show_address': 1, 'default_type': 'customer'}"
                           domain="[('customer', '=', True)]"
                           options="{'no_open': True,'no_create': 1,'no_create_edit': 1, 'always_reload': 1}"
                           attrs="{'required': [('is_partner_required', '=', True)]}"/>
                </field>
            </field>
        </record>

        <!-- Adds Partner group by -->
        <record id="stock_scrap_search_partner_view" model="ir.ui.view">
            <field name="name">stock.scrap.partner.search</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock_scrap_reason.stock_scrap_search_view"/>
            <field name="arch" type="xml">
                <filter string="Scrap Reason" position="after">
                    <filter string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                </filter>
            </field>
        </record>


    </data>
</openerp>
